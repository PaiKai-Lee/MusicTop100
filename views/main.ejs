<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="robots" content="index,follow">
    <meta name="author" content="Kai Lee">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Music Top 100</title>
    <link rel="stylesheet" href="/css/c3.min.css">
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <header>
        <a href="/"><h1>Music Top 100</h1></a>
        <nav class="nav">
            <div class="yearBar">
                <button><img src="/img/search.svg" alt=""></button>
                <input type="text" placeholder="YYYY" maxlength="4" minlength="4">
            </div>
            <a href="#">Genres flow</a>
            <a href="/user/login">Login/Signup</a>
            <a href="#">Log out</a>
        </nav>
        <button class="menu"><img src="/img/menu.svg" alt=""></button>
    </header>
    <main>
        <div class="types">
            <span class="type">Pop</span>
            <span class="type">Dance/EDM</span>
            <span class="type">Hip-hop/Rap</span>
            <span class="type">R&B</span>
            <span class="type">Latin</span>
            <span class="type">Rock</span>
            <span class="type">Metal</span>
            <span class="type">Country</span>
            <span class="type">Folk/Acoustic</span>
            <span class="type">Classical</span>
            <span class="type">Jazz</span>
            <span class="type">Blues</span>
            <span class="type">Easy Listening</span>
            <span class="type">New Age</span>
            <span class="type">World/Traditional Folk</span>
        </div>
        <section class="info">
            <div id="chart"></div>
            <div id="subGenres">
                <div class="subHeader">
                    <h4>Top sub-Genres</h4>
                    <p>Percent</p>
                </div>
            </div>
        </section>
        <section class="playList">
            <div id="hot100">
                <div class="top">
                    <h1><span></span> billboard Hot 100</h1>
                </div>
                <div class="listContainer">
                    <!-- 動態加入item -->
                </div>
            </div>
        </section>
    </main>
    <div id="listWrap" class="listWrap">
        <div class="listBtn">playlist</div>
        <div id="myPlayList" class="myPlayList">
        </div>
    </div>
    <div id="embed-container" class="hideiframe">
        <iframe id="player" class="player" type="text/html" frameborder="0" allow="autoplay" allowfullscreen></iframe>  
        <button id="ytbClose"><img src="/img/close_white.png" alt="YTBclose"></button>
    </div>
    <footer>

    </footer>
</body>
<script src="https://d3js.org/d3.v5.min.js"></script>
<script src="/js/c3.min.js"></script>
<script src="/js/base.js"></script>
<script src="/js/main.js"></script>
</html>